<h1 class="text-center">Current Events</h1>
<div class="container mt-3">
    <div class="row border-bottom border-dark">
        <div class="col-5 text-center border-right border-dark">Event:</div>
        <div class="col-2 text-center">Type:</div>
        <div class="col-2 text-center border-left border-right border-dark">Location:</div>
        <div class="col-2 text-center border-dark">Date:</div>
    </div>
    {{#each events}}
    <div class="row border-top border-bottom border-dark py-3">
        <a class="col-5 text-center border-right border-dark">events.event_name</a>
        <div class="col-2 text-center">events.event_type</div>
        <div class="col-2 text-center border-left border-right border-dark">events.event_location</div>
        <div class="col-2 text-center border-dark">events.event_date</div>
    </div>
    {{/each}}
</div>