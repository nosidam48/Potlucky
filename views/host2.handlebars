<h1>Add items to your event!</h1>
<div class="container item-container">
    <form action="/host2" method="post" class="form-inline">
        <div id="item-form">
            {{#each items}}
            <div class='form-group row'>
                <label for='example-text-input'>Name</label>
                <div class=''>
                    <input class='form-control' name='itemName' type='text' value='{{item}}' id='item-name'>
                </div>
                <label for='example-text-input'>Quantity</label>
                <div class=''>
                    <input class='form-control' name='quantity' type='text' value='{{quantity}}' id='item-quantity'>
                </div>
                <label for='itemType'>Type</label>
                <div class=''>
                    <select name='type'>
                        <option>Food</option>
                        <option>Beverage</option>
                        <option>Equipment</option>
                        <option>Entertainment</option>
                    </select>
                </div>
                <label for='cost'>Cost</label>
                <div class=''>
                    <input class='form-control' name='cost' type='text' {{#if cost}} value='{{cost}}' {{/if}} id='cost'>
                </div>
                <div class=>
                    <button class='btn btn-imfo btn-read-more btn-delete delete-row' id='delete-row' type='button'>
                        X
                    </button>
                </div>
            </div>
            {{/each}}
        </div>
        <input type="hidden" name="mydata" value="{{event_id}}">
        <div class="row col-12">
            <button class="btn btn-success btn-add" id="add-items" type="button">
                Add more items
            </button>
        </div>
        <br>
        <div class="form-group row col-12 item-button">
            <a href="/view2/{{event_id}}"><input action="/host2" type="submit" class="btn btn-primary" id="form-submit"></input></a>
        </div>
    </form>
    <div id="thanks" style="display:none">
        <h3>Thanks for submitting your necessities!</h3>
        <a href="/view2/{{event_id}}">View Event</a>
    </div>
</div>

