<!--about-->
<section id="about" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center marb-35">
                <h1 class="header-h">Items Needed for {{events.event_name}}</h1>
                <h4>Hosted By: {{events.host_name}}</h4>
                <h4 id = "date">Date: </h4>
                <h4 id = "time">Time: </h4>
                <p class="header-p">Put your mouth where your money is!
                    <br></p>
                <br>
            </div>
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th class="text-center" scope="col">Item</th>
                            <th class="text-center" scope="col">Quantity</th>
                            <th class="text-center" scope="col">Type</th>
                            <th class="text-center" scope="col">Cost</th>
                            <th class="text-center" scope="col">Who's Got It?</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items}}
                        <tr>
                            <th scope="row">{{math @index}}</th>
                            <td class="text-center">{{item}}</td>
                            <td class="text-center">{{quantity}}</td>
                            <td class="text-center">{{item_type}}</td>
                            <td class="text-center">{{cost}}</td>
                            <td id="bringer-td{{math @index}}"><button class="bringer-button" data="false"
                                    value="{{id}}" id="{{math @index}}">I'll Bring
                                    It!</button></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="col-md-12 col-sm-12">
                <img src="img/res01.jpg" alt="" class="img-responsive">
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
    </div>
</section>

