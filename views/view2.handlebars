<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.23.0/moment.min.js"></script>
<script>
    var date = "{{events.event_date}}"
    $("#date").append(moment(date).format("M/D/YYYY"))
    $("#time").append(moment(date).format("h:mm A"))
    var username = "{{user.username}}"
    var i = 1;
    "{{#each items}}"
        if("{{bringer_name}}"!=""){
            if ("{{bringer_name}}"==username){
                $("#"+i).attr("data", "true").text(username);
            }
            else {
                $("#bringer-td"+i).html("{{bringer_name}}")
            }
        }
        else if(!username){
            $("#bringer-td"+i).html("Log in to Bring It!");
        }
        i++;
    "{{/each}}"
</script>